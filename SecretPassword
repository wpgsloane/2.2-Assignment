import java.util.Scanner;

class Password {

    public static void main (String[] args) {
        //1. declare variables
        Scanner sc = new Scanner(System.in);
        
        //... other variables go here
        String answer = "";
        //2. get user input
        System.out.print("Enter Password: ");
        answer = sc.nextLine();
        if ("dragon".equals(answer))
        {
            System.out.println("Authorization Granted. It was Kernel Mustard, in the living room, with the candle stick");
        }
        else
        {
        System.out.println("Authorization Denied. The killer is still loose.");
    }
    }
}
